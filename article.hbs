        "@type": "BlogPosting",
        "headline": "{{story.title}}: {{story.subtitle}}",
        "image": "{{story.coverimage.src}}",
        "genre": "{{section.title}}",
        "dateModified": "{{story.date}}",
        "description": "{{story.description}}",
        "author": {
