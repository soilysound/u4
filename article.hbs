    <script async src="https://cdn.ampproject.org/v0.js"></script>
    <script async custom-element="amp-social-share" src="https://cdn.ampproject.org/v0/amp-social-share-0.1.js"></script>
    <script async custom-element="amp-accordion" src="https://cdn.ampproject.org/v0/amp-accordion-0.1.js"></script>
    <script async custom-element="amp-ad" src="https://cdn.ampproject.org/v0/amp-ad-0.1.js"></script>
    <script async custom-element="amp-analytics" src="https://cdn.ampproject.org/v0/amp-analytics-0.1.js"></script>
    <script async custom-element="amp-iframe" src="https://cdn.ampproject.org/v0/amp-iframe-0.1.js"></script>

    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Noto+Serif:400,700">
  </head>
  <body>
    <div class="site-wrap">
      <div class="main" role="main" itemscope="" itemtype="https://schema.org/BlogPosting">
        <meta itemprop="mainEntityOfPage" content="{{global.domain}}{{story.url}}">
        <div class="article-head wrap">
          <h1 class="article-head__headline" itemprop="headline">
            <span class="article-head__headline-top">{{story.title}}:</span>
            <span class="article-head__headline-bottom">{{{split-headline story.subtitle}}}</span>
          </h1>
          <p>
            <meta itemprop="description" content="{{story.description}}"/>
            {{story.description}}
          </p>
          <div class="social" aria-hidden>
            <a href="/top-100/#{{story.urlroot}}" class="social-score" data-score="{{story.stats.score}}" aria-hidden></a>
            <amp-social-share type="twitter"></amp-social-share>
            <amp-social-share type="facebook" data-share-endpoint="https://www.facebook.com/sharer/sharer.php?u={{global.domain}}{{story.url}}"></amp-social-share>
            <amp-social-share type="pinterest"></amp-social-share>
            <amp-social-share type="email" data-param-body="{{story.description}} - {{global.domain}}{{story.url}}"></amp-social-share>
          </div>
          <figure class="article-head__image" itemscope="" itemprop="associatedMedia image" itemtype="https://schema.org/ImageObject">
            <amp-img src="{{story.coverimage.src}}" width="{{story.coverimage.width}}" height="{{story.coverimage.height}}" alt="{{story.title}} {{story.subtitle}}" layout="responsive"></amp-img>
          </figure>
        </div>

        <div class="article wrap" itemprop="articleBody">
          {{{story.article}}}
        </div>

        <div class="article-related article-related--shade">
          <div class="wrap">

            <h2 class="article-related__header">Read Next</h2>
            <ul class="article-related__list" itemtype="http://schema.org/WebPage">
              {{#each related~}}
                <li>
                  <a href="{{url}}" class="article-related__item" itemprop="relatedLink">
                    <figure class="article-related__figure">
                      <amp-img src="/img/stories/{{urlroot}}.jpg" alt="{{title}} - {{subtitle}}" layout="responsive" width="80px" height="100px"></amp-img>
                    </figure>
                    <div class="article-related__body">
                      <h4>{{{title}}}</h4>
                      <h5>{{{split-headline subtitle}}}</h5>
                    </div>
                  </a>
                </li>
              {{~/each}}
            </ul>
          </div>
        </div>
        <div class="article-related">
          <h2 class="article-related__header">Comments</h2>
          <div class="wrap">
            <amp-iframe width=600 height=140
              layout="responsive"
              sandbox="allow-scripts allow-same-origin allow-modals allow-popups allow-forms"
              resizable
              src="https://raw.githubusercontent.com/soilysound/u4/gh-pages/disqus.html#{{global.domain}}{{story.url}}">
              <div overflow tabindex=0 role=button aria-label="Read more">Read more!</div>
            </amp-iframe>
          </div>
        </div>

      </div>

      {{> header}}

      <div class="footer wrap" role="footer">
        © theunredacted.com
      </div>

    </div>
    {{> analytics}}
  </body>
</html>
